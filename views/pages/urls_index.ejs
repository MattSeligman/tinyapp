<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head'); %>
</head>
<body class="container">

<%- include('../partials/_header'); %>

<main>
    <h3>My URLs</h3>
    <table class="table">
        <thead>
        <tr>
            <th scope="col">Short URL</th>
            <th scope="col">Long URL</th>
            <th scope="col">Edit</th>
            <th scope="col">Delete</th>
        </tr>
        </thead>
        <tbody>
        <% for(let url in urls) { %>
            <tr>
            <td><%= url %></td>
            <td><%= urls[url] %></td>
            <td>
                <form method="GET" action="/urls/<%= url %>">
                    <button type="submit" class="btn btn-secondary" value="Edit">Edit</button>
                </form>
            </td>
            <td>
                <form method="POST" action="/urls/<%= url %>/delete">
                    <button type="submit" class="btn btn-primary" value="Delete">Delete</button>
                </form>
            </td>
            </tr>
        <% } %>
        </tbody>
    </table>
</main>

<%- include('../partials/_footer'); %>

</body>
</html>

